{
    "name": "jlog-facade",
    "version": "0.9.0",
    "description": "Logger fa√ßade that focusing on creating a JSON output for typescript projects",
    "main": "lib/index.js",
    "repository": "https://github.com/fp8/jlog-facade.git",
    "author": "Marcos Lin <marcos.lin@farport.co>",
    "license": "MIT",
    "private": false,
    "types": "lib/index.d.ts",
    "scripts": {
        "build": "yarn lint && yarn build:ts && yarn test-lib && yarn gendoc",
        "build:ts": "tsc --project src/tsconfig.json",
        "gendoc": "OUTPUTDIR=build/docs && mkdir -p $OUTPUTDIR && typedoc --readme none --excludePrivate --tsconfig src/tsconfig.json --out $OUTPUTDIR src/index.ts",
        "lint:ts": "eslint src --ext .ts,.tsx",
        "lint": "yarn lint:ts",
        "info:version": "node scripts/packageInfo.js",
        "test-lib:unit": "ts-mocha --project test/tsconfig.lib.json -r tsconfig-paths/register 'test/*.spec.ts' 'test/**/*.spec.ts'",
        "test-lib": "yarn test-lib:unit",
        "test:unit": "ts-mocha --project test/tsconfig.json -r tsconfig-paths/register 'test/*.spec.ts' 'test/**/*.spec.ts'",
        "test": "yarn test:unit"
    },
    "devDependencies": {
        "@types/chai": "^4.3.3",
        "@types/chai-as-promised": "^7.1.5",
        "@types/debug": "^4.1.7",
        "@types/mocha": "^10.0.0",
        "@types/node": "^18.11.8",
        "@types/sinon": "^10.0.13",
        "@types/sinon-chai": "^3.2.8",
        "@typescript-eslint/eslint-plugin": "^5.42.1",
        "@typescript-eslint/parser": "^5.42.1",
        "chai": "^4.3.6",
        "chai-as-promised": "^7.1.1",
        "eslint": "^8.27.0",
        "mocha": "^10.1.0",
        "sinon": "^14.0.1",
        "sinon-chai": "^3.7.0",
        "ts-mocha": "^10.0.0",
        "ts-node": "^10.9.1",
        "tsconfig-paths": "^4.1.0",
        "typedoc": "^0.23.19",
        "typescript": "^4.8.4"
    }
}
